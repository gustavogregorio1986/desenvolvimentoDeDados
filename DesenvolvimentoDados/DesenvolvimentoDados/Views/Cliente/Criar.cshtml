@model DesenvolvimentoDados.Models.ClienteModel
@{
    ViewData["Title"] = "Cadastro de Cliente";
}

<div class="text-center">
  <h1 class="display-4">Cadastro de Cliente</h1>
</div>

<form asp-controller="Cliente" asp-action="Criar" method="post">
  <div class="form-group">
    <label for="nome">Nome:</label>
    <input type="text" asp-for="Nome" class="form-control" aria-describedby="nome" placeholder="Digite o nome">
    @Html.ValidationMessageFor(x => x.Nome, null, new { @class = "validation-error" })
  </div>
 <div class="form-group">
    <label for="e-mail">Email:</label>
    <input type="text" asp-for="Email" class="form-control" aria-describedby="email" placeholder="Diogite o e-mail">
    @Html.ValidationMessageFor(x => x.Email, null, new { @class = "validation-error" })
  </div>
  <div class="form-group">
    <label for="cpf">Cpf:</label>
    <input type="text" asp-for="Cpf" class="form-control" aria-describedby="cpf" placeholder="Diogite o cpf">
    @Html.ValidationMessageFor(x => x.Cpf, null, new { @class = "validation-error" })
  </div>
  <div class="form-group">
    <label for="profissao">Profissão:</label>
    <input type="text" asp-for="Profissao" class="form-control" aria-describedby="profissao" placeholder="Digite o profisão">
    @Html.ValidationMessageFor(x => x.Profissao, null, new { @class = "validation-error" })
  </div>
  <button type="submit" class="btn btn-primary">Cadastrar Cliente</button>
</form>
<br/>
@if(TempData["MensagemSucesso"] != null)
    {
         <div class="alert alert-success" role="alert">
           <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
           @TempData["MensagemSucesso"]
        </div>   
    }

    @if(TempData["MensagemErro"] != null)
    {
         <div class="alert alert-success" role="alert">
           <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
           @TempData["MensagemErro"]
        </div>   
    }