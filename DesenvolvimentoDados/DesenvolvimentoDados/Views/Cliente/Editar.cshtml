@model ClienteModel
@{
    ViewData["Title"] = "Editar o Cliente";
}

<div class="text-center">
  <h1 class="display-4">Editar o Cliente</h1>
</div>

<form asp-controller="Cliente" asp-action="Alterar" method="post">
  <input type="hidden" asp-for="Id" />
  <div class="form-group">
    <label for="nome">Nome:</label>
    <input type="text" asp-for="Nome" class="form-control" aria-describedby="nome" placeholder="Diogite o nome">
    @Html.ValidationMessageFor(x => x.Nome, null, new { @class = "validation-error" })
  </div>
 <div class="form-group">
    <label for="e-mail">Email:</label>
    <input type="text" asp-for="Email" class="form-control" aria-describedby="email" placeholder="Digite o e-mail">
    @Html.ValidationMessageFor(x => x.Email, null, new { @class = "validation-error" })
  </div>
  <div class="form-group">
    <label for="cpf">Cpf:</label>
    <input type="text" asp-for="Cpf" class="form-control" aria-describedby="cpf" placeholder="Digite o cpf">
    @Html.ValidationMessageFor(x => x.Cpf, null, new { @class = "validation-error" })
  </div>
  <div class="form-group">
    <label for="profissao">Profissão:</label>
    <input type="text" asp-for="Profissao" class="form-control" aria-describedby="profissao" placeholder="Digite o profisão">
    @Html.ValidationMessageFor(x => x.Profissao, null, new { @class = "validation-error" })
  </div>
  <button type="submit" class="btn btn-primary">Cadastrar Cliente</button>
</form>