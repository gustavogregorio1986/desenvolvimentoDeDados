@model ClienteModel
@{
    ViewData["Title"] = "Confirmação para apagar o Cliente";
}

<div class="text-center">
    <h3>Realmente deseja apagar o contato (@Model.Nome)?</h3>
</div>


<a class="btn btn-danger btn-block" role="button" asp-route-id="@Model.Id" asp-controller="Cliente" asp-action="Apagar">Confirmar Exclusão</a>